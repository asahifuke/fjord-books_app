<h1><%= Comment.model_name.human %></h1>

<% if comments.present? %>
  <table>
    <thead>
      <tr>
        <th><%= User.human_attribute_name(:email) %></th>
        <th><%= User.human_attribute_name(:name) %></th>
        <th><%= Comment.human_attribute_name(:body) %></th>
        <th><%= Comment.human_attribute_name(:created_at) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% comments.each do |comment| %>
        <tr>
          <td><%= comment.user.email %></td>
          <td><%= comment.user.name %></td>
          <td><%= comment.body %></td>
          <td><%= comment.created_at.strftime("%Y年%m月%d日") %></td>
          <% if current_user == comment.user %>
            <td><%= link_to t('views.common.edit'), edit_comment_path(comment) %></td>
            <td><%= link_to t('views.common.destroy'), comment_path(comment), method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p><%= t('comment.nothing') %></p>
<% end %>

<%= form_with model: [target, comment] do |form| %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body, required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
