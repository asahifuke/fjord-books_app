<h1><%= Comment.model_name.human %></h1>

<% if comments.present? %>
  <table>
    <thead>
      <tr>
        <th><%= User.human_attribute_name(:email) %></th>
        <th><%= User.human_attribute_name(:name) %></th>
        <th><%= Comment.human_attribute_name(:body) %></th>
        <th><%= Comment.human_attribute_name(:created_at) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% comments.each do |comment| %>
        <tr>
          <td><%= comment.user.email %></td>
          <td><%= comment.user.name %></td>
          <td><%= comment.body %></td>
          <td><%= comment.created_at.strftime("%Y年%m月%d日") %></td>
          <% if current_user == comment.user %>
            <td><%= link_to t('views.common.edit'), edit_book_book_comment_path(comment.commentable_id, comment) %></td>
            <td><%= link_to t('views.common.destroy'), book_book_comment_path(comment.commentable_id, comment), method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p><%= t('comment.nothing') %></p>
<% end %>

<%= render partial: 'comments/form', locals: {target: book, comment: comment, url: book_book_comments_path(book) } %>
